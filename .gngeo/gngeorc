p1control A=K122,B=K120,C=K97,D=K115,START=K49,COIN=K51,UP=K273,DOWN=K274,LEFT=K276,RIGHT=K275,MENU=K27,A=K65505,B=K65507,C=K65513,D=K32,START=K49,COIN=K97,UP=K264,DOWN=K261,LEFT=K260,RIGHT=K262,MENU=K27

